rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for security
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function hasValidEmail() {
      return isAuthenticated() && 
             request.auth.token.email_verified == true;
    }
    
    // Rate limiting helper - check document size
    function isValidDataSize() {
      return request.resource.size() < 1048576; // 1MB limit
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      // Allow read if user owns the document
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow create on signup (first time only)
      allow create: if isAuthenticated() && 
                       isOwner(userId) && 
                       hasValidEmail() &&
                       isValidDataSize() &&
                       request.resource.data.keys().hasAll(['id', 'email', 'createdAt']) &&
                       request.resource.data.email == request.auth.token.email;
      
      // Allow update only by owner, and cannot change email or id
      allow update: if isOwner(userId) && 
                       isValidDataSize() &&
                       request.resource.data.id == resource.data.id &&
                       request.resource.data.email == resource.data.email;
      
      // Prevent deletion (soft delete via status field instead)
      allow delete: if false;
      
      // Subscriptions subcollection
      match /subscriptions/{subscriptionId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Only admin can modify subscriptions
      }
      
      // User prompts tracking
      match /prompts/{promptId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) && isValidDataSize();
        allow update, delete: if false;
      }
    }
    
    // Admin collection - strictly controlled
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if false; // Admins can only be added via Firebase Admin SDK
    }
    
    // Support tickets
    match /tickets/{ticketId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       isValidDataSize() &&
                       request.resource.data.keys().hasAll(['userId', 'subject', 'message', 'status', 'createdAt']);
      
      allow update: if isAdmin(); // Only admins can update tickets
      allow delete: if false;
    }
    
    // Prompt statistics - read-only for users, write for system
    match /stats/{statId} {
      allow read: if isAdmin();
      allow write: if false; // Only server with Admin SDK can write
    }

    // Token usage (daily limits for anonymous and authenticated users)
    match /tokenUsage/{docId} {
      function isAnonDoc() {
        return docId.size() >= 5 && docId[0:5] == "anon_";
      }

      function isUserDoc() {
        return request.auth != null && docId == 'user_' + request.auth.uid;
      }

      allow read, write: if isAnonDoc() || isUserDoc();
    }
    
    // Subscriptions collection (persistent token grants and purchases)
    match /subscriptions/{userId} {
      // Users can read their own subscription
      allow read: if isOwner(userId) || isAdmin();
      // Only backend (Admin SDK) can write subscriptions
      allow write: if false;
    }
    
    // Purchases collection (transaction history)
    match /purchases/{purchaseId} {
      // Users can read their own purchases
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      // Only backend (Admin SDK) can write purchases
      allow write: if false;
    }
    
    // Admin operations log (audit trail)
    match /admin_operations/{operationId} {
      // Only admins can read the audit log
      allow read: if isAdmin();
      // Only backend (Admin SDK) can write operations
      allow write: if false;
    }
    
    // Admin stats collection (for dashboard)
    match /admin_stats/{statId} {
      allow read: if isAdmin();
      allow write: if false; // Only server with Admin SDK can write
    }
    
    // User-specific lessons (AI-generated lessons per user)
    match /userLessons/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) && isValidDataSize();
    }
    
    // Learning progress tracking
    match /learningProgress/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) && isValidDataSize();
    }
    
    // Exam attempts
    match /examAttempts/{attemptId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       isValidDataSize();
      allow update, delete: if false; // Exam attempts are immutable once created
    }
    
    // Certificates
    match /certificates/{certId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       isValidDataSize();
      allow update, delete: if false; // Certificates are immutable once issued
    }
    
    // Lesson requests (tracking AI lesson generation requests per user per module)
    match /lessonRequests/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      // Backend writes via Admin SDK, users can read their own request counts
      allow write: if false; // Only backend (Admin SDK) can write
    }
    
    // Leaderboard
    match /leaderboard/{userId} {
      allow read: if isAuthenticated(); // Anyone can read leaderboard
      allow write: if isOwner(userId) && isValidDataSize(); // Users can update their own entry
    }
    
    // Generated modules (published modules from tutor admin)
    match /generatedModules/{moduleId} {
      allow read: if isAuthenticated(); // Authenticated users can read published modules
      allow write: if false; // Only backend (Admin SDK) can write modules
    }
    
    // Tutor admin content
    match /tutorContent/{contentId} {
      allow read: if isAuthenticated(); // Authenticated users can read
      allow write: if false; // Only backend (Admin SDK) can write
    }
    
    // Tutor admins
    match /tutorAdmins/{tutorId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend (Admin SDK) can write
    }
    
    // Counsel booking - requests
    match /counselRequests/{requestId} {
      // Users can read their own requests, counselors can read all pending
      allow read: if isAuthenticated();
      // Only backend can write (Admin SDK handles all writes)
      allow write: if false;
    }
    
    // Counsel booking - appointments
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend (Admin SDK) can write
    }
    
    // Counselors collection
    match /counselors/{counselorId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend (Admin SDK) can write
    }
    
    // Counsel Chat Sessions
    match /counselChats/{chatId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource.data.counselorId == request.auth.uid);
      allow create: if false; // Only backend can create chat sessions
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource.data.counselorId == request.auth.uid) && isValidDataSize();
      allow delete: if false;

      // Chat messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated() && (get(/databases/$(database)/documents/counselChats/$(chatId)).data.userId == request.auth.uid || get(/databases/$(database)/documents/counselChats/$(chatId)).data.counselorId == request.auth.uid);
        allow create: if isAuthenticated() && (get(/databases/$(database)/documents/counselChats/$(chatId)).data.userId == request.auth.uid || get(/databases/$(database)/documents/counselChats/$(chatId)).data.counselorId == request.auth.uid) && isValidDataSize();
        allow update: if isAuthenticated() && (get(/databases/$(database)/documents/counselChats/$(chatId)).data.userId == request.auth.uid || get(/databases/$(database)/documents/counselChats/$(chatId)).data.counselorId == request.auth.uid);
        allow delete: if false;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

